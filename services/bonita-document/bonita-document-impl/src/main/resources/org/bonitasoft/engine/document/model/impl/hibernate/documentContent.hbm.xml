<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping auto-import="false" default-access="field" package="org.bonitasoft.engine.document.model.impl">

	<filter-def name="tenantFilter" condition=":tenantId = tenantid">
		<filter-param name="tenantId" type="long" />
	</filter-def>

	<class name="SDocumentContentImpl" table="document_content">
		<composite-id class="org.bonitasoft.engine.persistence.PersistentObjectId" mapped="true">
			<key-property name="tenantId" column="tenantid" type="long" />
			<key-property name="id" column="id" type="long" />
		</composite-id>
		<property name="documentId" type="java.lang.String" column="documentId" />
		<property name="content" column="content" />
		<filter name="tenantFilter" />
	</class>
</hibernate-mapping>
