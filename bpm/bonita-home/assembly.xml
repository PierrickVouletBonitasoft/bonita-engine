<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id></id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory>home</outputDirectory>
            <directory>base</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>home</outputDirectory>
            <directory>hibernate</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>home</outputDirectory>
            <directory>common</directory>
            <excludes>
                <exclude>server/platform/conf/VERSION</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>home/server/platform/conf/</outputDirectory>
            <directory>common/server/platform/conf/</directory>
            <includes>
                <include>VERSION</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
</assembly>
